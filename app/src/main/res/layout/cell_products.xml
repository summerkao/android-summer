<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:id="@+id/progressBar4"
        android:indeterminateTint="@android:color/holo_red_light"
        android:layout_above="@+id/cpProdNameTxt"
        android:layout_toStartOf="@+id/cpFinalPricetxt"
        android:layout_marginBottom="51dp"/>

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cpProdImage"
        android:scaleType="centerCrop"
        android:layout_height="120dp"
        android:layout_width="150dp"/>

    <TextView
        android:text="loading..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpProdImage"
        android:layout_alignParentStart="true"
        android:id="@+id/cpProdNameTxt"
        android:layout_marginLeft="5dp"
        android:layout_alignEnd="@+id/cpProdImage"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="12sp"
        android:textStyle="normal|bold"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpProdNameTxt"
        android:layout_alignParentStart="true"
        android:id="@+id/cpBigPriceTxt"
        android:textColor="#333"
        android:textSize="11sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpFinalPricetxt"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="11sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/cpProdNameTxt"
        android:layout_alignEnd="@+id/cpProdNameTxt"
        android:textStyle="normal|bold"/>

</RelativeLayout>