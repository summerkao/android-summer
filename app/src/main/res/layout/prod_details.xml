<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prod_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/pdProductScrollView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/pdImage1"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/pdImage2"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/pdImage3"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/pdImage4"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="loading..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pdProdNameTxt"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#111"
                android:textStyle="normal|bold"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="loading..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pdProdPriceTxt"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#444"
                android:textAlignment="center"
                android:layout_below="@+id/pdProdNameTxt"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="loading..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pdDescTxt"
                android:layout_below="@+id/pdProductScrollView"
                android:layout_alignStart="@+id/pdAddToCartButt"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="ADD TO CART"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pdAddToCartButt"
                android:background="#faca68"
                android:layout_below="@+id/pdProdPriceTxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>
