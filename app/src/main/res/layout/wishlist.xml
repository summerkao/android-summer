<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wishlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wishlist">


    <!-- TAB BAR -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_home"
            android:textAllCaps="false"
            android:background="@drawable/tab_home"
            android:layout_gravity="center_horizontal"
            android:textSize="10dp"
            />

        <Button
            android:id="@+id/tab_wishlist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tab_wishlist"
            android:backgroundTint="@color/colorAccent"
            android:textAllCaps="false"
            android:textSize="10dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_cart"
            android:textAllCaps="false"
            android:background="@drawable/tab_cart"
            android:layout_marginLeft="20dp"
            android:textSize="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_contact"
            android:textAllCaps="false"
            android:background="@drawable/tab_contact"
            android:layout_marginLeft="20dp"
            android:textSize="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>





    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout2"
        android:id="@+id/wWishlistListView"
        android:layout_marginBottom="10dp"
        android:dividerHeight="10dp"
        android:divider="#fff"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="Long tap to remove an item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="11sp"/>


</RelativeLayout>
