<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/cwProdNameTxt"
        android:layout_toStartOf="@+id/cwProdNameTxt"
        android:layout_marginEnd="31dp"
        android:indeterminateTint="@android:color/holo_red_light"
        android:progressTint="@android:color/holo_red_light"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cwProdImage"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="loading..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:id="@+id/cwProdNameTxt"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/cwProdImage"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="normal|bold"
        android:textSize="12sp"
        android:textColor="#333"
        android:maxLines="1"/>

    <TextView
        android:text="loading..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cwProdNameTxt"
        android:layout_alignStart="@+id/cwProdNameTxt"
        android:layout_marginTop="9dp"
        android:id="@+id/cwPriceTxt"
        android:textSize="12sp"/>

</RelativeLayout>